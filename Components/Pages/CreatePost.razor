@page "/create-post"

<h3>Opret nyt opslag</h3>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="d-flex">
                <div class="input-group">
                    <input class="form-control form-control-lg" type="search" placeholder="Hvor er din fisk fanget?" aria-label="Search">
                    <button class="btn btn-primary px-4" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mb-3">
    <label for="formFile" class="form-label">Indsæt billede her</label>
    <input class="form-control" type="file" id="formFile">
</div>

<div class="CreateCardPost">
    <label for="exampleFormControlTextarea1" class="form-label">Beskriv din fangst</label>
    <textarea class="form-control" id="Beskrivelse1" rows="3"></textarea>
</div>

<select class="fish-select" aria-label="Default select example">
    <option selected>Vælg en fisk</option>
    <option value="1">Laks</option>
    <option value="2">Tangnål</option>
    <option value="3">Brisling</option>
</select>



